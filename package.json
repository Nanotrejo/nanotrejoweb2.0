{
  "name": "nanotrejoweb",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prettier": "prettier --write \"src/**/*.{ts,html,css,scss,md}\"",
    "start": "ng serve -o",
    "build": "ng build",
    "build-prod": "ng build --configuration production --aot",
    "deploy": "ng build --configuration production --aot && netlify deploy --prod --dir=dist/nanotrejoweb/browser",
    "watch": "ng build --watch --configuration development",
    "build:compodoc": "npx compodoc -p tsconfig.compodoc.json -d ./documentation",
    "serve:compodoc": "npx compodoc -s -d ./documentation",
    "test": "ng test",
    "test-ci": "ng test --watch=false --browsers=ChromeHeadless"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.5",
    "@angular/cdk": "^19.2.8",
    "@angular/common": "^19.2.5",
    "@angular/compiler": "^19.2.5",
    "@angular/core": "^19.2.5",
    "@angular/forms": "^19.2.5",
    "@angular/material": "^19.2.8",
    "@angular/platform-browser": "^19.2.5",
    "@angular/platform-browser-dynamic": "^19.2.5",
    "@angular/router": "^19.2.5",
    "@angular/service-worker": "^19.2.5",
    "@compodoc/compodoc": "^1.1.31",
    "@nguniversal/express-engine": "7.0.2",
    "axios": "^1.4.0",
    "marked": "^9.0.0",
    "material-icons": "^1.13.10",
    "netlify-cli": "^6.14.0",
    "ngx-markdown": "^18.0.0",
    "prismjs": "^1.29.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.5",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.5",
    "@types/jasmine": "^5.1.12",
    "@types/marked": "^4.3.1",
    "@types/node": "^12.11.1",
    "autoprefixer": "^10.4.14",
    "jasmine-core": "^5.12.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "postcss": "^8.4.27",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.8.3"
  }
}